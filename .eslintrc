{
  "env": {
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": "eslint:recommended",
  "rules": {
    "comma-dangle": ["warn", "only-multiline"],
    "eol-last": ["error"],
    "keyword-spacing": ["error", { "before": true } ],
    "no-console": "off",
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "no-unused-vars": "warn",
    "no-var": "warn",
    "quotes": ["warn", "single", "avoid-escape"],
    "semi": ["error", "always"],
    "space-before-blocks": "error"
  }
}
